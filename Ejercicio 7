int main() { 

    int matriz[4][4]; 

  printf("Ingrese los elementos de la matriz:\n"); 

    for (int i = 0; i < 4; i++) { 

        for (int j = 0; j < 4; j++) { 

            printf("Ingrese el elemento para la fila A y columna B: ", i + 1, j + 1); 

            scanf("A", matriz[i][j]); 

        } 

    } 

   printf("\nElementos de la diagonal secundaria:\n"); 

    for (int i = 0; i < 4; i++) { 

        printf("A", matriz[i][3 - i]); 

    } 

  

    return 0; 

} 
